<div class="row">
  <div class="col-6">
    <h1>Customer addresses</h1>
  </div>
  <div class="col-6 d-flex justify-content-end">
    <%= link_to "New address", new_customer_address_path, class: 'btn btn-secondary align-self-center' %>
  </div>
</div>

<div id="customer_addresses">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Street</th>
        <th scope="col">Street number</th>
        <th scope="col">City</th>
        <th scope="col">Country</th>
        <th scope="col">State</th>
        <th scope="col">Zip code</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @customer_addresses.each do |customer_address| %>
        <tr>
          <%= render customer_address %>
          <td>
            <%= link_to "Show", customer_address, class: 'btn btn-primary w-25 m-1' %>
            <%= link_to "Edit", edit_customer_address_path(customer_address), class: 'btn btn-primary w-25 m-1' %>
            <%= button_to "Delete", customer_address, method: :delete, class: 'btn btn-primary w-25 m-1' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
