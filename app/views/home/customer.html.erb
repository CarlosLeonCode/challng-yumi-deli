<div class="container">
  <div class="row mb-2 mb-4">
    <div class="col-8">
      <h1>Your orders</h1>
    </div>
    <div class="col-4 d-flex justify-content-end">
      <%= link_to "New order", new_order_path, class: 'btn btn-primary align-self-center' %>
    </div>
  </div>

  <div id="orders">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Order number</th>
          <th scope="col">Customer</th>
          <th scope="col">Address</th>
          <th scope="col">Payment</th>
          <th scope="col">Total to pay</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <%= render order %>
            <td>
              <%= link_to "Show", order, class: 'btn btn-primary w-25 m-1' %>
              <%= link_to "Edit", edit_order_path(order), class: 'btn btn-primary w-25 m-1' %>
              <%= button_to "Delete", order, method: :delete, class: 'btn btn-primary w-25 m-1' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
