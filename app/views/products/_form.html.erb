<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control' %>
    <div class="form-text">Product name.</div>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_area :description, class: 'form-control' %>
    <div class="form-text">Description about the product.</div>
  </div>

  <div class="mb-3">
    <%= form.label :price, class: 'form-label' %>
    <%= form.text_field :price, class: 'form-control' %>
    <div class="form-text">Product's price.</div>
  </div>

  <div class="mb-3">
    <%= form.label :weight, class: 'form-label' %>
    <%= form.text_field :weight, class: 'form-control' %>
    <div class="form-text">Product's weight.</div>
  </div>

  <div class="mb-3">
    <%= form.submit class: 'btn btn-primary w-100' %>
  </div>
<% end %>
